<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/contadortotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reset1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Resettotal"
        />

    <Button
        android:id="@+id/Resettotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset all"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reset1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/contadortotal"/>

    <!-- Fila1 -->

    <TextView
        android:id="@+id/contador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/Resettotal"
        app:layout_constraintBottom_toTopOf="@id/reset2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/augmento1"
        />
    <Button
        android:id="@+id/augmento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintTop_toBottomOf ="@+id/Resettotal"
        app:layout_constraintBottom_toTopOf="@+id/augmento2"
        app:layout_constraintRight_toLeftOf="@id/reset1"
        app:layout_constraintLeft_toRightOf="@+id/contador1"/>
    <Button
        android:id="@+id/reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf ="@+id/Resettotal"
        app:layout_constraintBottom_toTopOf="@+id/reset2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/augmento1"/>

    <!-- Fila2 -->

    <TextView
        android:id="@+id/contador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/reset1"
        app:layout_constraintBottom_toTopOf="@id/reset3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/augmento2"
        />
    <Button
        android:id="@+id/augmento2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintTop_toBottomOf ="@+id/augmento1"
        app:layout_constraintBottom_toTopOf="@id/augmento3"
        app:layout_constraintRight_toLeftOf="@id/reset2"
        app:layout_constraintLeft_toRightOf="@+id/contador2"/>
    <Button
        android:id="@+id/reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf ="@+id/reset1"
        app:layout_constraintBottom_toTopOf="@id/reset3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/augmento2"/>

    <!-- Fila3 -->

    <TextView
        android:id="@+id/contador3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/reset2"
        app:layout_constraintBottom_toTopOf="@id/reset4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/augmento3"
        />
    <Button
        android:id="@+id/augmento3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintTop_toBottomOf ="@+id/augmento2"
        app:layout_constraintBottom_toTopOf="@id/augmento4"
        app:layout_constraintRight_toLeftOf="@id/reset3"
        app:layout_constraintLeft_toRightOf="@+id/contador3"/>
    <Button
        android:id="@+id/reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf ="@+id/reset2"
        app:layout_constraintBottom_toTopOf="@+id/reset4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/augmento3"/>

    <!-- Fila4 -->

    <TextView
        android:id="@+id/contador4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/reset3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/augmento4"
        />
    <Button
        android:id="@+id/augmento4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintTop_toBottomOf ="@+id/augmento3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/reset4"
        app:layout_constraintLeft_toRightOf="@+id/contador4"/>
    <Button
        android:id="@+id/reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf ="@+id/reset3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/augmento4"/>
</androidx.constraintlayout.widget.ConstraintLayout>